<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_grey_round16"
    android:clipToOutline="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_family_photo"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_placeholder_family"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:src="@drawable/overlay"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_family_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleMedium"
        android:text="@string/placeholder_family_name"
        android:textColor="@color/content_dark_primary"
        android:textAlignment="center"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ContentSmall"
            android:text="Domisili"
            android:textColor="#DCDCDC"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"/>

        <TextView
            android:id="@+id/tv_domicile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ContentSmall"
            android:text="Sidoarjo"
            android:textColor="#DCDCDC"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:layout_marginStart="2dp"/>

    </LinearLayout>
</FrameLayout>